<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <io.informramiz.myapplication.ProgressView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:progressView_circle_radius="@dimen/circle_radius"
            app:progressView_normal_line_thickness="@dimen/line_thickness_normal"
            app:progressView_progress_line_thickness="@dimen/line_thickness_progress"
            app:progressView_orientation="vertical"
            app:progressView_progress="0.7"
            app:progressView_normal_state_color="@color/colorPrimary"
            app:progressView_progress_state_color="@color/colorAccent"/>

</FrameLayout>